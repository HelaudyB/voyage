{% extends 'base.html.twig' %}

{% block title %}Hello DestinationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    <a href="{{ path('default') }}">Page d'accueil</a>


    <ul>
        {% set destinations =['Saint-Etienne', 'Amiens', 'Québec','Montcuq', 'Langogne'] %}
        {% for dest in destinations %}
            <li><a  href="{{ path('destination_detail', {'lieu':dest}) }}" > {{dest|upper}}</a></li>
        {% endfor %}
    </ul>

</div>

{% endblock %}
