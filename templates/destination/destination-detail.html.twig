{% extends 'base.html.twig' %}

{% block title %}Hello DestinationController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue à {{ destination }}! ✅</h1>

        Retournez à toutes les destinations:
        <a href="{{ path('destination') }}">Destinations</a>

    </div>
    <div>
        {%  if destination == 'Saint-Etienne' %}
            <img src="{{ asset('images/saintetienne.jpg') }}" style="width: 600px; display: block; margin-left: auto; margin-right: auto;">
        {% endif %}
        {%  if destination == 'Amiens' %}
            <img src="{{ asset('images/amiens.jpg') }}" style="width: 600px; display: block; margin-left: auto; margin-right: auto;">
        {% endif %}
        {%  if destination == 'Québec' %}
            <img src="{{ asset('images/quebec.jpg') }}" style="width: 600px; display: block; margin-left: auto; margin-right: auto;">
        {% endif %}
        {%  if destination == 'Montcuq' %}
            <img src="{{ asset('images/montcuq.jpg') }}" style="width: 600px; display: block; margin-left: auto; margin-right: auto;">
        {% endif %}
        {%  if destination == 'Langogne' %}
            <img src="{{ asset('images/langogne.jpg') }}" style="width: 600px; display: block; margin-left: auto; margin-right: auto;">
        {% endif %}

    </div>
{% endblock %}